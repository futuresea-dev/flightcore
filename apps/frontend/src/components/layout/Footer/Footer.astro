---
import { Icon } from 'astro-icon/components'
import FooterBottom from './FooterCopyright.astro'
import Navigation from '../Navigation//Navigation.astro'

const companyLocationText = `Flightcore Studios Sp. z o.o.
Mickiewicza 9/U1
01-517 Warszawa

NIP: 525-290-87-47`
---

<footer transition:name="footer-base" class="w-full">
  <div class="container">
    <hr class="border-blue-medium" />
    <div class="grid grid-cols-1 lg:grid-cols-[280px_1fr] lg:mb-[64px] lg:gap-[240px]">
      <div class="min-w-0 flex flex-col items-center lg:items-start">
        <Icon width={undefined} height={undefined} name="brand/wide/medium" class="brand-image" />
        <p class="company-location-text text-center lg:text-left">{companyLocationText}</p>
      </div>
      <div class="min-w-0">
        <div class="footer-nav">
          <h6 class="footer-nav__title">Menu</h6>
          <div class="flex justify-center lg:justify-start">
            <Navigation showPriceListRoute={true} />
          </div>
        </div>
        <div class="instagram-posts">
          <h6 class="instagram-posts__title text-center lg:text-left">Follow Us on Instagram</h6>
          <div class="instagram-posts__wrapper">
            <div class="instagram-posts__rail">
              <div
                class="grid grid-cols-2 gap-3 mx-auto w-fit md:flex md:flex-row md:gap-[12px] md:w-full mb-10 lg:justify-start">
                <div class="instagram-post"></div>
                <div class="instagram-post"></div>
                <div class="instagram-post"></div>
                <div class="instagram-post"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <FooterBottom />
  </div>
</footer>

<style>
  .brand-image {
    @apply text-blue-lightest w-[280px] pt-[60px] pb-[48px];
  }
  .company-location-text {
    @apply whitespace-pre text-white text-body1;
  }
  .footer-nav {
    @apply py-[64px];
  }
  .footer-nav__title,
  .instagram-posts__title {
    @apply text-white text-subtitle mb-[18px];
  }
  .instagram-posts__wrapper {
    @apply w-full overflow-hidden;
  }
  .instagram-posts__rail {
    @apply w-full overflow-x-auto;
  }
  .instagram-post {
    @apply flex-shrink-0 w-[120px] h-[120px] bg-black;
  }
</style>
