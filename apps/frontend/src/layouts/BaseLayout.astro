---
import { ViewTransitions } from 'astro:transitions'

import { BookingModal } from '@flightcore/booking'

import { LoaderOverlay } from '@flightcore/uikit'

import '../styles/fonts.css'
import '../styles/global.css'

interface Props {
  metaTitle: string
  metaDesc: string
  metaUrl: string
}

const { metaTitle, metaDesc, metaUrl } = Astro.props
---

<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={metaDesc} />
    <meta property="og:title" content={metaTitle} />
    <meta property="og:description" content={metaDesc} />
    <meta property="og:image" content="/brand-banner.jpg" />
    <meta property="og:url" content={metaUrl} />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="YourSiteName" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="robots" content="noindex,follow" />
    <title>{metaTitle}</title>
    <link rel="preconnect" href="https://flightcore.pl/booking" />
    <link rel="icon" href="/favicon.png" sizes="192x192" />
    <ViewTransitions />
  </head>
  <body class="bg-blue-dark">
    <div id="viewport"><slot /></div>
    <div id="portal"></div>
    <BookingModal transition:persist client:only="react" />
    <LoaderOverlay transition:persist />
  </body>
</html>

<script>
  import { handleBookingDataAttributeNodes } from '@flightcore/booking'
  document.addEventListener('astro:page-load', () => {
    handleBookingDataAttributeNodes()
  })
</script>
