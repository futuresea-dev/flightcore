---
import { Button } from '@flightcore/uikit'
import { Icon } from 'astro-icon/components'
import { HeroVideoPlayer } from './HeroVideoPlayer'
---

<section id="hero" transition:name="index-hero" aria-labelledby="hero-title">
  <div class="hero-container">
    <!-- 1220 / 720 -->
    <div class="hero-matrix">
      <HeroVideoPlayer transition:persist />
      <div class="absolute inset-0 z-10 w-full h-full bg-[#1B2634] opacity-50"></div>
      <div class="hero-content">
        <h1
          data-aos="fade-in-down"
          data-aos-duration="300"
          data-aos-anchor-placement="center-bottom"
          id="hero-title"
          class="hero-content__title">
          <span>FLIGHT TO</span>
          <span>THE CORE</span>
        </h1>
        <Button
          data-aos="fade-in-down"
          data-aos-duration="300"
          data-aos-delay="300"
          data-aos-anchor-placement="center-bottom"
          data-booking-button
          aria-label="Book Now"
          size="large"
          color="yellow"
          variant="filled">
          BOOKING
        </Button>
      </div>
    </div>
  </div>
  <Icon name="brand/short/big" class="bg-icon" width={undefined} height={undefined} />
</section>

<style>
  #hero {
    @apply relative text-blue-lightest mt-[80px];
  }
  .hero-image {
    width: 100%;
    height: 100%;
  }
  .hero-matrix {
    @apply w-full relative aspect-[382/408] lg:aspect-[1220/720] rounded-[36px] overflow-hidden z-0 select-none;
  }
  .hero-container {
    @apply py-[40px] lg:py-[64px] container;
  }
  .hero-content {
    @apply absolute flex flex-col justify-center items-center gap-[64px] z-10 inset-0;
  }
  .hero-content__title {
    @apply text-heading2 lg:text-heading1 font-bold;
  }
  .hero-content__title span {
    @apply block whitespace-nowrap;
  }

  .bg-icon {
    @apply text-extra-dark;
    position: absolute;
    z-index: -1;
    width: min(81.25vw, 1177px);
    top: 36px;
    left: calc(-1 * calc(min(81.25vw, 1177px) / 2));
  }
</style>
