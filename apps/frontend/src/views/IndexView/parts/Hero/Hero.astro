---
import { Button } from '@flightcore/uikit'
import { Icon } from 'astro-icon/components'
import { Picture } from 'astro:assets'
import heroImage from '/public/assets/images/showreel/Showreel@3x.jpg'
---

<section id="hero" transition:name="index-hero" aria-labelledby="hero-title">
  <div class="hero-container">
    <!-- 1220 / 720 -->
    <div class="hero-matrix">
      <Picture
        src={heroImage}
        alt="A description of my image."
        pictureAttributes={{ class: 'w-full h-full' }}
        class="w-full h-full object-cover"
        loading="eager"
        decoding="async"
        widths={[375, 750, 1125]}
        formats={['avif', 'webp']}
        fallbackFormat="jpeg"
        quality={100}
        width={1220}
        height={720}
      />
      <div class="hero-content">
        <h1 id="hero-title" class="hero-content__title">
          <span>FLIGHT TO</span>
          <span>THE CORE</span>
        </h1>
        <Button data-booking-button aria-label="Book Now" size="large" color="yellow" variant="filled"> BOOKING </Button>
      </div>
    </div>
  </div>
  <Icon name="brand/short/big" class="bg-icon" width={undefined} height={undefined} />
</section>

<style>
  #hero {
    @apply relative text-blue-lightest mt-[80px];
  }
  .hero-image {
    width: 100%;
    height: 100%;
  }
  .hero-matrix {
    @apply w-full relative aspect-[382/408] lg:aspect-[1220/720] rounded-[36px] overflow-hidden z-0 select-none;
  }
  .hero-container {
    @apply py-[40px] lg:py-[64px] container;
  }
  .hero-content {
    @apply absolute flex flex-col justify-center items-center gap-[64px] z-10 inset-0;
  }
  .hero-content__title {
    @apply text-heading2 lg:text-heading1 font-bold;
  }
  .hero-content__title span {
    @apply block whitespace-nowrap;
  }

  .bg-icon {
    @apply text-extra-dark;
    position: absolute;
    z-index: -1;
    width: min(81.25vw, 1177px);
    top: 36px;
    left: calc(-1 * calc(min(81.25vw, 1177px) / 2));
  }
</style>
