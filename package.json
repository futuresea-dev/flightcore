{
  "private": true,
  "engines": {
    "bun": ">=1.1.12"
  },
  "name": "flightcore",
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "api": "bun --filter @flightcore/api",
    "fe": "bun --filter @flightcore/frontend",
    "db": "bun --filter @flightcore/db",
    "uikit": "bun --filter @flightcore/uikit",
    "format": "prettier --write apps libs"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "prettier": "^3.3.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@astrojs/tailwind": "^5.1.0",
    "react": "^18.3.1",
    "tailwindcss": "^3.4.3"
  }
}
