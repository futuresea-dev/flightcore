generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum DayOfWeek {
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
  SATURDAY
  SUNDAY
}

model Booking {
  id                 Int     @id @default(autoincrement())
  cal_kind           String?
  cal_etag           String?
  cal_id             String?
  cal_status         String?
  cal_htmllink       String?
  cal_created        String?
  cal_updated        String?
  cal_summary        String?
  cal_creator        String?
  cal_organizer      String?
  cal_start_datetime String?
  cal_start_timezone String?
  cal_end            String?
  cal_end_timezone   String?
  cal_icaluid        String?
  cal_sequence       String?
  cal_reminders      Int?
  cal_eventtype      Int?
  cal_recurrence     Int?

  organizer_display_name String?
  organizer_self         Boolean?

  extendedproperties_location_id   String?
  extendedproperties_realizator_id String?

  rrule_flag Boolean @default(false)
  rrule      String?

  sound_engineer    SoundEngineer @relation(fields: [sound_engineer_id], references: [id])
  sound_engineer_id Int
}

model SoundEngineer {
  id            Int     @id @default(autoincrement())
  nickname      String? // .ksywa
  firstname     String? // .imie
  lastname      String? // .nazwisko
  phoneNumber   String? // .nrtel
  discord_login String? // .discord
  desc          String?

  // Preferences
  prefersTV         String?
  prefersMinimeters String?
  prefersDPI        String?

  bookings                    Booking[]
  sound_engineer_availability SoundEngineerAvailability[]

  hidden Boolean @default(true) // Is not exposed to the FE
}

model SoundEngineerAvailability {
  id                Int           @id @default(autoincrement())
  dayOfWeek         DayOfWeek // Enum for days of the week
  startTime         String
  endTime           String
  sound_engineer_id Int
  sound_engineer    SoundEngineer @relation(fields: [sound_engineer_id], references: [id])

  @@index([id, sound_engineer_id])
}

model StudioLocation {
  id        Int     @id @default(autoincrement())
  location  String?
  google_id String?
  info      String?
}
